#!/bin/sh

if [ $# -lt 2 ]
then
    echo 'Usage: delete <absolute-path> <project-name>'
    exit 1
else
    path=${1}
    name=${2}
fi

echo 'Removing directory'
rm -rf $path

echo 'Removing virtual hosts'
sudo rm -rf /etc/apache2/sites-available/$name.local /etc/apache2/sites-enabled/$name.local

echo 'Removing log files'
sudo rm -rf /var/log/apache2/$name

echo 'Restarting apache2 configuration'
sudo /etc/init.d/apache2 restart

echo 'Removing hostname'
sudo sed -i "s/127.0.0.1       $name.local//" /etc/hosts
