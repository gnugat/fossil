<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="redaktilo.editor" class="Gnugat\Redaktilo\Editor"
            public="false">
            <argument type="service" id="redaktilo.filesystem" />
            <argument type="service" id="redaktilo.search_engine" />
            <argument type="service" id="redaktilo.command_invoker" />
        </service>

        <service id="redaktilo.filesystem" class="Gnugat\Redaktilo\Service\Filesystem"
            public="false">
            <argument type="service" id="redaktilo.line_break" />
            <argument type="service" id="symfony.filesystem" />
        </service>

        <service id="redaktilo.line_break" class="Gnugat\Redaktilo\Service\LineBreak"
            public="false">
        </service>

        <service id="symfony.filesystem" class="Symfony\Component\Filesystem\Filesystem"
            public="false">
        </service>

        <service id="redaktilo.search_engine" class="Gnugat\Redaktilo\Search\SearchEngine"
            public="false">
            <call method="registerStrategy">
                 <argument type="service" id="redaktilo.regex_search_strategy" />
                 <argument key="priority">20</argument>
            </call>
            <call method="registerStrategy">
                 <argument type="service" id="redaktilo.same_search_strategy" />
                 <argument key="priority">10</argument>
            </call>
        </service>

        <service id="redaktilo.regex_search_strategy"
            class="Gnugat\Redaktilo\Search\LineRegexSearchStrategy"
            public="false">
        </service>

        <service id="redaktilo.same_search_strategy"
            class="Gnugat\Redaktilo\Search\SameSearchStrategy"
            public="false">
        </service>

        <service id="redaktilo.command_invoker" class="Gnugat\Redaktilo\Command\CommandInvoker"
            public="false">
            <call method="addCommand">
                 <argument type="service" id="redaktilo.insert_above_command" />
            </call>
            <call method="addCommand">
                 <argument type="service" id="redaktilo.insert_below_command" />
            </call>
            <call method="addCommand">
                 <argument type="service" id="redaktilo.replace_command" />
            </call>
            <call method="addCommand">
                 <argument type="service" id="redaktilo.remove_command" />
            </call>
        </service>

        <service id="redaktilo.insert_above_command"
            class="Gnugat\Redaktilo\Command\LineInsertAboveCommand"
            public="false">
        </service>
        <service id="redaktilo.insert_below_command"
            class="Gnugat\Redaktilo\Command\LineInsertBelowCommand"
            public="false">
        </service>
        <service id="redaktilo.replace_command"
            class="Gnugat\Redaktilo\Command\LineReplaceCommand"
            public="false">
        </service>
        <service id="redaktilo.remove_command"
            class="Gnugat\Redaktilo\Command\LineRemoveCommand"
            public="false">
        </service>
    </services>
</container>
