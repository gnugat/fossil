<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="symfony.console.application"
            class="Symfony\Component\Console\Application">
            <argument key="name">Fossil</argument>
            <argument key="version">2.0.0</argument>
            <call method="add">
                 <argument type="service" id="fossil.doc_command" />
            </call>
            <call method="add">
                 <argument type="service" id="fossil.doc_library_command" />
            </call>
            <call method="add">
                 <argument type="service" id="fossil.doc_bundle_command" />
            </call>
        </service>

        <service id="fossil.doc_command" class="Gnugat\Fossil\DocCommand"
            public="false">
            <argument type="service" id="fossil.markdown_file.skeleton_repository" />
            <argument type="service" id="fossil.markdown_file.documentation_factory" />
            <argument type="service" id="fossil.markdown_file.documentation_writer" />
        </service>

        <service id="fossil.doc_library_command"
            class="Gnugat\Fossil\DocLibraryCommand"
            public="false">
            <argument type="service" id="fossil.markdown_file.skeleton_repository" />
            <argument type="service" id="fossil.markdown_file.documentation_factory" />
            <argument type="service" id="fossil.markdown_file.documentation_writer" />
        </service>

        <service id="fossil.doc_bundle_command"
            class="Gnugat\Fossil\DocBundleCommand"
            public="false">
            <argument type="service" id="fossil.markdown_file.skeleton_repository" />
            <argument type="service" id="fossil.markdown_file.documentation_factory" />
            <argument type="service" id="fossil.markdown_file.documentation_writer" />
        </service>
    </services>
</container>
