<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="fossil.markdown_file.skeleton_repository"
            class="Gnugat\Fossil\MarkdownFile\SkeletonRepository"
            public="false">
            <argument type="service" id="symfony.finder" />
            <argument key="skeletonsPath">%fossil.path.skeletons%</argument>
        </service>

        <service id="symfony.finder" class="Symfony\Component\Finder\Finder"
            public="false">
        </service>
    </services>
</container>
